<h1>Job</h1>

<div id="job" class="mx-auto">

<p>
    <strong>Job Title:</strong>
    <%= job.job_title %>
  </p>

  <p>
    <strong>Job Description:</strong>
    <%= job.job_description %>
  </p>

  <p>
    <strong>Company:</strong>
    <%= job.company_id.company %>
  </p>

  <p>
    <strong>Job Location:</strong>
    <%= job.job_location %>
  </p>

  <p>
    <strong>Job Type:</strong>
    <%= job.job_type %>
  </p>

  <p>
    <strong>Remote:</strong>
    <%= job.remote %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= job.job_salary %>
  </p>

  <p>
    <strong>Application Deadline:</strong>
    <%= job.application_deadline %>
  </p>

  <p>
    <strong>Published At:</strong>
    <%= job.created_at %>
  </p>

  <p>
    <strong>Expiration Date:</strong>
    <%= job.expiration_date %>
  </p>

  <p>
    <strong>Requirements:</strong>
    <%= job.job_requirements %>
  </p>

  <p>
    <strong>Responsibiliries:</strong>
    <%= job.job_responsibilities %>
  </p>

  <p>
    <strong>Associated Company ID:</strong>
    <%= job.company_id %>
  </p>
<br>
<div>
  <p>
    <strong>Actions:</strong>
  </p>
  <p>
    <%= link_to "Edit", edit_job_path(job), class:"btn btn-primary" %>
  </p>
  <p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal-<%= job.id%>">Delete</button> 
  </p>
  <%= render partial: 'deleteModal', locals: { job: job } %>
</div>
<br>
<div>
    <p><%= link_to "All jobs", jobs_path, class:"btn btn-primary"  %></p>
</div>



